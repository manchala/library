<h1> The Alpha Cypress Book Store (index) </h1>
<% if @books.blank? %>
<p>There are not any books currently in the system.</p>
<% else %>
<p>These are the books at our store</p>
<table>
  <tr>
    <th width="35%">Title</th>
    <th width="25%">Author</th>
    <th ></th>
    <th ></th>
    <th ></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td> <%= link_to book.title, :action => 'show', :id => book.id %></td>
    <td> <%= book.authors %> </td>
    <td class="button extra details"> <%= link_to 'Show', {:action => :show, :id => book.id, :method => :get}%></td>
    <td class="button extra change"> <%= link_to 'Edit', {:action => :edit, :id => book.id}%></td>
    <td class="button extra alert"> <%= link_to 'Delete', book, :method => :delete, :confirm => 'Are you sure?'%></td>
  </tr>
<% end %>
</table>
<br />
<% end %>
<p class="round submit"><%= link_to 'Add New Book', :action => 'new'%></p>
